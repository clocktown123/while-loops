counter = 2
while counter < 21:
    print("counter is:", counter)
    counter += 2

answer = ' '
while answer != 'yes':
    answer = input("do you want to fish?")
    if answer == 'yes':
        print("fish")
    else:
        print("TAKE IT >:(")

guess = '0'
while guess != '7':
    guess = input("guess a number 1-10")
    if guess == '7':
        print("good job")
    else:
        print("try again")
